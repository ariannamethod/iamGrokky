# Token for your Telegram bot (required)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# API key for the XAI mirror endpoints (optional)
XAI_API_KEY=your-xai-api-key

# OpenAI API key (required)
OPENAI_API_KEY=your-openai-api-key

# Telegram chat ID for direct messages (required)
CHAT_ID=your-chat-id

# Enable group mode by setting to True (optional)
IS_GROUP=True

# Telegram group ID used when IS_GROUP is True (optional)
AGENT_GROUP=-1001234567890

# Pinecone credentials for the vector store (optional)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=your-pinecone-index

# Port for the FastAPI server (optional)
PORT=8000
